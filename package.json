{
  "name": "mcp-scan-monorepo",
  "version": "0.1.0",
  "type": "commonjs",
  "private": true,
  "description": "Monorepo for MCP endpoint scanning tools",
  "workspaces": [
    "ts-cli",
    "python-cli"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "cd ts-cli && npm run dev",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "install:all": "npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/mcp-scan-cli.git"
  },
  "keywords": ["mcp", "express", "endpoint", "scanning", "model-context-protocol"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
