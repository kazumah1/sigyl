{
  "name": "mcp-platform-monorepo",
  "version": "0.1.0",
  "type": "commonjs",
  "private": true,
  "description": "Monorepo for MCP Platform - CLI tools, registry, and hosting",
  "workspaces": [
    "packages/cli/ts-cli",
    "packages/cli/python-cli",
    "packages/registry-api",
    "packages/container-builder",
    "packages/web-frontend",
    "packages/shared",
    "apps/api",
    "apps/docs"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "cd packages/cli/ts-cli && npm run dev",
    "dev:py": "cd packages/cli/python-cli && python main.py",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd packages/web-frontend && npm run dev",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "install:all": "npm install && npm run build",
    "setup": "npm install && npm run build",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/mcp-platform.git"
  },
  "keywords": [
    "mcp",
    "express",
    "fastapi",
    "endpoint",
    "scanning",
    "model-context-protocol",
    "registry",
    "hosting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/serve-handler": "^6.1.4",
    "lerna": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "gsap": "^3.13.0",
    "js-yaml": "^4.1.0",
    "octokit": "^5.0.3",
    "serve-handler": "^6.1.6",
    "zod": "^3.25.67"
  }
}
