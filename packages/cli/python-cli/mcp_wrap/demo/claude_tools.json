[
  {
    "name": "summarize_content",
    "description": "Summarize content from a URL or text",
    "input_schema": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "URL of the content to summarize"
        },
        "max_length": {
          "type": "integer",
          "description": "Maximum length of summary",
          "minimum": 50,
          "maximum": 1000,
          "default": 200
        },
        "style": {
          "type": "string",
          "enum": ["concise", "detailed", "bullet_points", "narrative"],
          "description": "Summary style",
          "default": "concise"
        }
      },
      "required": ["url"]
    }
  },
  {
    "name": "translate_text",
    "description": "Translate text between languages",
    "input_schema": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Text to translate"
        },
        "source_language": {
          "type": "string",
          "description": "Source language code (e.g., 'en', 'es', 'fr')",
          "default": "auto"
        },
        "target_language": {
          "type": "string",
          "description": "Target language code (e.g., 'en', 'es', 'fr')"
        },
        "preserve_formatting": {
          "type": "boolean",
          "description": "Whether to preserve original formatting",
          "default": true
        }
      },
      "required": ["text", "target_language"]
    }
  },
  {
    "name": "generate_code",
    "description": "Generate code based on requirements",
    "input_schema": {
      "type": "object",
      "properties": {
        "requirements": {
          "type": "string",
          "description": "Natural language description of what the code should do"
        },
        "programming_language": {
          "type": "string",
          "enum": ["python", "javascript", "typescript", "java", "csharp", "go", "rust"],
          "description": "Target programming language"
        },
        "framework": {
          "type": "string",
          "description": "Optional framework to use (e.g., 'react', 'flask', 'spring')"
        },
        "include_tests": {
          "type": "boolean",
          "description": "Whether to include unit tests",
          "default": false
        },
        "code_style": {
          "type": "object",
          "properties": {
            "indentation": {
              "type": "string",
              "enum": ["spaces", "tabs"],
              "default": "spaces"
            },
            "max_line_length": {
              "type": "integer",
              "minimum": 60,
              "maximum": 120,
              "default": 80
            }
          }
        }
      },
      "required": ["requirements", "programming_language"]
    }
  },
  {
    "name": "analyze_data",
    "description": "Perform data analysis on a dataset",
    "input_schema": {
      "type": "object",
      "properties": {
        "data_source": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["csv", "json", "database", "api"],
              "description": "Type of data source"
            },
            "location": {
              "type": "string",
              "description": "Path, URL, or connection string to the data"
            },
            "options": {
              "type": "object",
              "description": "Additional options for data loading",
              "properties": {
                "encoding": {
                  "type": "string",
                  "default": "utf-8"
                },
                "delimiter": {
                  "type": "string",
                  "default": ","
                }
              }
            }
          },
          "required": ["type", "location"]
        },
        "analysis_type": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["descriptive", "correlation", "trend", "outlier", "distribution", "regression"]
          },
          "description": "Types of analysis to perform"
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Column name"
              },
              "type": {
                "type": "string",
                "enum": ["numeric", "categorical", "datetime", "text"],
                "description": "Data type for analysis"
              },
              "include": {
                "type": "boolean",
                "default": true,
                "description": "Whether to include this column in analysis"
              }
            },
            "required": ["name", "type"]
          },
          "description": "Column specifications for analysis"
        },
        "output_format": {
          "type": "string",
          "enum": ["json", "csv", "html", "pdf"],
          "default": "json",
          "description": "Format for analysis results"
        }
      },
      "required": ["data_source", "analysis_type"]
    }
  }
]